<div class="container col-12">
  <h2 class="text-center mt-2">All Users</h2>
  <ul class="col-6 mx-auto">
    <% @user.each do |user| %>
      <li><%= user.firstname %> | <%= user.email %> |
          <%=  link_to 'delete', user, method: :delete,
                                       data: { confirm: "Are you sure?" } %>
      </li></br>
    <% end %>
  </ul>
</div>

